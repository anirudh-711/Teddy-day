<script>
let current = 0;
const pages = document.querySelectorAll('.page');
const hint = document.querySelector('.hint');

// Unified Navigation Function
function nextPage() {
  if (current < pages.length - 1) {
    pages[current].classList.remove('active');
    current++;
    pages[current].classList.add('active');
    
    // Hide hint on last page
    if (current === pages.length - 1) {
      hint.style.display = 'none';
    }
  }
}

// 1. Click/Tap Navigation
document.addEventListener('click', nextPage);

// 2. Keyboard Navigation (Space/Right Arrow)
document.addEventListener('keydown', (e) => {
  if (e.code === 'Space' || e.code === 'ArrowRight') nextPage();
});

// 3. Swipe Navigation
let startX = 0;
document.addEventListener('touchstart', e => startX = e.touches[0].clientX);
document.addEventListener('touchend', e => {
  let endX = e.changedTouches[0].clientX;
  if (startX - endX > 50) nextPage();
});

// Refined Floating Generator
function createFloating() {
  const el = document.createElement('div');
  const items = ['‚ù§Ô∏è', 'üß∏', '‚ú®', '‚òÅÔ∏è'];
  el.className = 'floating';
  el.style.left = Math.random() * 100 + 'vw';
  el.style.fontSize = (Math.random() * 20 + 15) + 'px';
  el.innerHTML = items[Math.floor(Math.random() * items.length)];
  el.style.animationDuration = (Math.random() * 3 + 4) + 's';
  document.body.appendChild(el);
  setTimeout(() => el.remove(), 7000);
}

setInterval(createFloating, 500);
</script>

